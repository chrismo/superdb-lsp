{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SuperSQL",
  "scopeName": "source.spq",
  "fileTypes": ["spq"],
  "foldingStartMarker": "\\(\\s*$",
  "foldingStopMarker": "^\\s*\\)",
  "patterns": [
    { "include": "#comments" },
    { "include": "#fstrings" },
    { "include": "#strings" },
    { "include": "#constants" },
    { "include": "#keywords" },
    { "include": "#sql-keywords" },
    { "include": "#operators-builtin" },
    { "include": "#functions-builtin" },
    { "include": "#functions-aggregate" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#numbers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.spq",
          "match": "//.*$"
        },
        {
          "name": "comment.line.double-dash.spq",
          "match": "--.*$"
        },
        {
          "name": "comment.block.spq",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.spq" }
          }
        }
      ]
    },
    "fstrings": {
      "patterns": [
        {
          "name": "string.interpolated.double.spq",
          "begin": "f\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.spq" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.spq" }
          },
          "patterns": [
            {
              "name": "meta.interpolation.spq",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.spq" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.spq" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            { "include": "#string-escapes" }
          ]
        },
        {
          "name": "string.interpolated.single.spq",
          "begin": "f'",
          "end": "'",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.spq" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.spq" }
          },
          "patterns": [
            {
              "name": "meta.interpolation.spq",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.spq" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.spq" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            { "include": "#string-escapes" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.spq",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.spq" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.spq" }
          },
          "patterns": [
            { "include": "#string-escapes" }
          ]
        },
        {
          "name": "string.quoted.single.spq",
          "begin": "'",
          "end": "'",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.spq" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.spq" }
          },
          "patterns": [
            { "include": "#string-escapes" }
          ]
        }
      ]
    },
    "string-escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.spq",
          "match": "\\\\(?:[\\\\\"'nrtbfv0]|x[0-9a-fA-F]{2}|u[0-9a-fA-F]{4})"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.spq",
          "match": "\\b(true)\\b"
        },
        {
          "name": "constant.language.boolean.false.spq",
          "match": "\\b(false)\\b"
        },
        {
          "name": "constant.language.null.spq",
          "match": "\\b(null)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.spq",
          "match": "\\b(const|func|op|type)\\b"
        },
        {
          "name": "keyword.other.spq",
          "match": "\\b(this|lambda|fn)\\b"
        }
      ]
    },
    "sql-keywords": {
      "comment": "SQL keywords - case insensitive",
      "patterns": [
        {
          "name": "keyword.other.sql.spq",
          "match": "(?i)\\b(SELECT|FROM|WHERE|GROUP|BY|HAVING|ORDER|LIMIT|OFFSET)\\b"
        },
        {
          "name": "keyword.other.sql.join.spq",
          "match": "(?i)\\b(JOIN|INNER|LEFT|RIGHT|CROSS|ANTI|FULL|OUTER|ON|USING)\\b"
        },
        {
          "name": "keyword.other.sql.set.spq",
          "match": "(?i)\\b(UNION|INTERSECT|EXCEPT|ALL|DISTINCT)\\b"
        },
        {
          "name": "keyword.other.sql.clause.spq",
          "match": "(?i)\\b(WITH|RECURSIVE|AS|VALUES|INTO)\\b"
        },
        {
          "name": "keyword.other.sql.case.spq",
          "match": "(?i)\\b(CASE|WHEN|THEN|ELSE|END)\\b"
        },
        {
          "name": "keyword.operator.logical.sql.spq",
          "match": "(?i)\\b(AND|OR|NOT|IN|EXISTS|LIKE|BETWEEN|IS)\\b"
        },
        {
          "name": "keyword.other.sql.order.spq",
          "match": "(?i)\\b(ASC|DESC|NULLS|FIRST|LAST)\\b"
        },
        {
          "name": "keyword.other.sql.window.spq",
          "match": "(?i)\\b(OVER|PARTITION|ROWS|RANGE|UNBOUNDED|PRECEDING|FOLLOWING|CURRENT|ROW)\\b"
        }
      ]
    },
    "operators-builtin": {
      "comment": "Built-in pipeline operators",
      "name": "support.function.operator.spq",
      "match": "\\b(assert|combine|cut|debug|drop|explode|file|fork|from|fuse|get|head|join|load|merge|over|pass|put|rename|sample|scope|search|sort|sql|summarize|switch|tail|top|uniq|unnest|where|yield)\\b"
    },
    "functions-builtin": {
      "comment": "Built-in functions",
      "name": "support.function.spq",
      "match": "\\b(abs|base64|bucket|cast|ceil|cidr_match|compare|coalesce|crop|error|every|fields|fill|flatten|floor|grep|grok|has|hex|has_error|is|is_error|join|kind|ksuid|len|levenshtein|log|lower|map|missing|nameof|nest_dotted|network_of|now|order|parse_uri|parse_zson|pow|quiet|regexp|regexp_replace|replace|round|rune_len|shape|split|sqrt|strftime|trim|typename|typeof|typeunder|under|unflatten|upper)\\b"
    },
    "functions-aggregate": {
      "comment": "Aggregate functions",
      "name": "support.function.aggregate.spq",
      "match": "\\b(and|any|avg|collect|collect_map|count|dcount|fuse|max|min|or|sum|union)\\b"
    },
    "types": {
      "comment": "Type names",
      "name": "support.type.spq",
      "match": "\\b(uint8|uint16|uint32|uint64|uint128|uint256|int8|int16|int32|int64|int128|int256|float16|float32|float64|float128|float256|decimal32|decimal64|decimal128|decimal256|duration|time|bool|bytes|string|ip|net|type|null|error)\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pipe.spq",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.assignment.spq",
          "match": ":="
        },
        {
          "name": "keyword.operator.cast.spq",
          "match": "::|:>"
        },
        {
          "name": "keyword.operator.spread.spq",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.comparison.spq",
          "match": "==|!=|<>|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.spq",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.spq",
          "match": "[+\\-*/%]"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.spq",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.spq",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.spq",
          "match": "\\b[0-9]+\\b"
        }
      ]
    }
  }
}
